{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*", "./build/*", "./dist/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
